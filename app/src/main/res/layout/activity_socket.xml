<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >
    <Button
        android:id="@+id/btn_socket_server_tcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TCP Socket Server"
        />
    <Button
        android:id="@+id/btn_socket_server_udp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UDP Socket Server"
        />
    <Button
        android:id="@+id/btn_socket_tcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TCP Socket Client"
        />
    <Button
        android:id="@+id/btn_socket_udp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UDP Socket Client"
        />

</LinearLayout>